{
  "manifest_version": 3,
  "name": "溪水旁 GPT Assistant",
  "version": "1.0",
  "description": "GPT assistant for 溪水旁 (By The Stream) Christian magazine",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.bythestream.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.bythestream.org/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 